@model Cashed.View.Models.EditIncomeTypeViewModel

@{
    ViewBag.Title = "Доходы";
}

<h2>Добавление статьи доходов</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, null, new {@class = "col-form-label col-md-3"})
        @Html.TextBoxFor(m => m.Name, null, new {@class = "form-control col-md-9"})
    </div>
    <div class="container validation-message-in-container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary btn-sm">Сохранить</button>
    @Html.ActionLink("Отмена", "Index", "Incomes", null, new
    {
        id = "categoriesLink",
        @class = "btn btn-outline-danger btn-sm"
    })
}

@section Scripts{
    <script type="text/javascript">
        activateLink("#incomesLink");
    </script>
}

