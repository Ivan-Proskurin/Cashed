@model Logic.Cashed.Contract.Models.PaginationInfo

@if (Model.TotalPageCount > 1)
{
    <nav aria-label="Categories page navigation">
        <ul class="pagination justify-content-end">
            @if (Model.PageNumber == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Назад</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    @Html.ActionLink("Назад",
                        "Index", new { page = Model.PageNumber - 1 }, new { @class = "page-link" })
                </li>
            }
            @for (var i = 1; i <= Model.TotalPageCount; i++)
            {
                if (Model.PageNumber == i)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        @Html.ActionLink(@i.ToString(), "Index", new { page = i }, new { @class = "page-link" })
                    </li>
                }
            }
            @if (Model.PageNumber >= Model.TotalPageCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Далее</a>
                </li>        
            }
            else
            {
                <li class="page-item">
                    @Html.ActionLink("Далее",
                        "Index", new { page = Model.PageNumber + 1 }, new { @class = "page-link" })
                </li>
            }
        </ul>
    </nav>
}
